<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="android:dividerVertical">@drawable/divider_grey_100</item>
        <item name="android:dividerHorizontal">@drawable/divider_grey_100</item>
        <item name="android:textColorPrimary">@color/gray_500</item>
        <item name="android:dialogTheme">@style/DialogTheme</item>
        <item name="toolbarStyle">@style/ToolBarStyle</item>
        <item name="appBarLayoutStyle">@style/AppTheme.AppBarOverlay</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="collapsedTitleTextAppearance">@style/CollapsedTitleTextAppearance</item>
        <item name="expandedTitleTextAppearance">@style/ExpandedTitleTextAppearance</item>
    </style>

    <style name="ToolBarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/black</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
    </style>

    <style name="ExpandedTitleTextAppearance" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CollapsedTitleTextAppearance" parent="Widget.Design.CollapsingToolbar">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Widget.MaterialComponents.AppBarLayout.Primary" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DialogTheme" parent="Theme.MaterialComponents.Light.Dialog">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/gray_500</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="android:dividerVertical">@drawable/divider_grey_100</item>
        <item name="android:dividerHorizontal">@drawable/divider_grey_100</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowMinWidthMajor">90%</item>

    </style>
</resources>
